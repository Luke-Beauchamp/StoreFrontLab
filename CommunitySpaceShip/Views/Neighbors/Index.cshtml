@model IEnumerable<CommunitySpaceShipData.Neighbor>

@{
    ViewBag.Title = "Neighbors";
}
<header class="masthead">
    <div class="container h-100">
        <div class="row h-100 align-items-center justify-content-center text-center">
            <div class="col-lg-10 align-self-end">
                <h1 class="text-white font-weight-bold">@ViewBag.Title</h1>
                <hr class="divider my-4" />
            </div>
            <div class="col-lg-10 align-self-start">
                <p class="text-white font-weight-light mb-5">Every Neighbor is a valuable part of a community.</p>
                <a class="btn btn-xl js-scroll-trigger myBtn text-white" href="#list">Neighbors List</a>
            </div>
        </div>
    </div>
</header>



<!--Neighbors List-->
<section class="page-section myBackground" id="list">
    <div class="container">
        <div class="row justify-content-center">
            <div class="text-center">
                <h2 class="mt-0 font-weight-bold">Our Wonderful Neighbors</h2>
                <hr class="divider light my-4" />
                <p>
                    @Html.ActionLink("Create New", "Create", routeValues: null, htmlAttributes: new { @class = "btn myLightBtn"})
                </p>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.FullName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ProduceAvailable)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DairyAvailable)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EggsAvailable)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Region.RegionName)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FullName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProduceAvailable)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DairyAvailable)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EggsAvailable)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Region.RegionName)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.NeighborID }, htmlAttributes: new { @class = "myIcon" }) |
                                @*@Html.ActionLink("Details", "Details", new { id = item.NeighborID }, htmlAttributes: new { @class = "myIcon" }) |*@
                                @Html.ActionLink("Delete", "Delete", new { id = item.NeighborID }, htmlAttributes: new { @class = "myIcon" })
                            </td>
                        </tr>
                    }
                </table>
                @*Need to direct this continue to a Neighbor edit view of current user....*@
            </div>
        </div>
    </div>
</section>


