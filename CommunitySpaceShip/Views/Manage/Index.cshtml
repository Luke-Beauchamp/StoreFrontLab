@model CommunitySpaceShip.Models.IndexViewModel
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Your Account";
}

<header class="masthead">
    <div class="container h-100">
        <div class="row h-100 align-items-center justify-content-center text-center">
            <div class="col-lg-10 align-self-end">
                <h1 class="text-white font-weight-bold">Welcome Back,</h1>
                <hr class="divider my-4" />
            </div>
            <div class="col-lg-8 align-self-baseline">
                <p class="text-white-75 font-weight-light mb-5">
                    @User.Identity.GetUserName()
                </p>
                <a class="btn btn-primary btn-xl js-scroll-trigger" href="#manage">Manage Profile</a>
            </div>
        </div>
    </div>
</header>

<!-- Profile-->
<section class="page-section bg-primary" id="manage">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h3 class="text-white mt-0">
                    @(Model.HasPassword ? Html.ActionLink("Change your password", "ChangePassword")
                : Html.ActionLink("Pick a password", "SetPassword"))
                            </h3>
                <hr class="divider light my-4" />
                <p class="text-white-50 mb-4">Not what you're looking for?</p>
                <a class="btn btn-light btn-xl js-scroll-trigger" href="#information">Continue</a>
            </div>
        </div>
    </div>
</section>

