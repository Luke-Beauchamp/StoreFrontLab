@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole

@{
    ViewBag.Title = "Delete Role";
}


<header class="masthead">
    <div class="container h-100">
        <div class="row h-100 align-items-center justify-content-center text-center">
            <div class="col-lg-10 align-self-end">
                <h1 class="text-white font-weight-bold">@ViewBag.Title</h1>
                <hr class="divider my-4" />
            </div>
            <div class="col-lg-10 align-self-start text-white">
                <h3>Are you sure you want to delete this Role?</h3>
                <p>Deleting this Role will remove all users from this role. It will not delete the users.</p>
                <div>
                    <p>Name: <strong>@Html.DisplayFor(model => model.Name)</strong></p>
                    @*<dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                    </dl>*@
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Delete" class="btn btn-xl myBtn mb-3" />
                            <br />
                            @Html.ActionLink("Back to Roles", "Index", routeValues: null, htmlAttributes: new { @class = "myLink" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</header>
