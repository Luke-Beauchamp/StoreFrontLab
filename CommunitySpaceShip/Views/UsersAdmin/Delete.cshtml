@model CommunitySpaceShip.Models.ApplicationUser

@{
    ViewBag.Title = "Delete User";
}

<header class="masthead">
    <div class="container h-100">
        <div class="row h-100 align-items-center justify-content-center text-center">
            <div class="col-lg-10 align-self-end">
                <h1 class="text-white font-weight-bold">@ViewBag.Title</h1>
                <hr class="divider my-4" />
            </div>
            <div class="col-lg-10 align-self-start text-white">
                <h3>Are you sure you want to delete this User?</h3>
                <div>
                    <h2 class="mb-3">
                        @Html.DisplayFor(model => model.UserName)
                    </h2>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Delete" class="btn btn-xl myBtn mb-3" />
                            <br />
                            @Html.ActionLink("Back to Users", "Index", routeValues: null, htmlAttributes: new { @class = "myLink" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</header>

