@model CommunitySpaceShip.Models.EditUserViewModel

@{
    ViewBag.Title = "Edit Users";
}

<header class="masthead">
    <div class="container h-100">
        <div class="row h-100 align-items-center justify-content-center text-center">
            <div class="col-lg-10 align-self-end">
                <h1 class="text-white font-weight-bold">@ViewBag.Title</h1>
                <hr class="divider my-4" />
            </div>
            <div class="col-lg-10 align-self-start">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal text-white">
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(model => model.Id)

                        <div class="form-group">
                            @Html.LabelFor(model => model.Email, new { @class = "control-label" })
                            <div class="col-md-10 offset-md-1">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Email)
                            </div>
                        </div>
                        <div class="form-group">
                            <span class=" col-md-10 offset-md-1">
                                @Html.Label("Roles: ", new { @class = "control-label" })
                                @foreach (var item in Model.RolesList)
                                {
                                    <span class="p-2">
                                        <input type="checkbox" name="SelectedRole" value="@item.Value" checked="@item.Selected" class="checkbox-inline" />
                                        @Html.Label(item.Value, new { @class = "control-label" })
                                    </span>
                                }
                            </span>
                        </div>

                        <div class="form-group">
                            <div class="offset-md-1 col-md-10">
                                <input type="submit" value="Save" class="btn btn-xl myBtn mb-3" />
                                <br />
                                @Html.ActionLink("Back to Users", "Index", routeValues: null, htmlAttributes: new { @class = "myLink" })
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</header>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
